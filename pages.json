{
	// 快速导入组件
	"easycom": {
		"^u-(.*)": "@/components/uview-ui/components/u-$1/u-$1.vue",
		"^uni-(.*)": "@/components/uni/uni-$1/uni-$1.vue"
	},
	// 配置路由
	"pages": [{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登陆"
			}
		},
		{
			"path": "pages/guide/guide",
			"style": {
				"navigationBarTitleText": "引导页",
				"navigationStyle": "custom",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/main/main",
			"style": {
				"navigationBarTitleText": "主页"
			}
		},
		{
			"path": "pages/apps/apps",
			"style": {
				"navigationBarTitleText": "应用"
			}
		},
		{
			"path": "pages/news/news",
			"style": {
				"navigationBarTitleText": "新闻"
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/main/custom-navi/custom-navi",
			"style": {
				"navigationBarTitleText": "自定义导航栏",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/main/custom-navi/navi",
			"style": {
				"navigationBarTitleText": "原生导航栏"
			}
		},
		{
			"path": "pages/main/request/request",
			"style": {
				"navigationBarTitleText": "网络请求"
			}
		},
		{
			"path": "pages/main/show-info/show-info",
			"style": {
				"navigationBarTitleText": "展示登录信息"
			}
		},
		{
			"path": "pages/main/test-await/test-await",
			"style": {
				"navigationBarTitleText": "await"
			}
		},
		{
			"path": "pages/main/test-searchbar/test-searchbar",
			"style": {
				"navigationBarTitleText": "",
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"backgroundColor": "#fff",
							"borderRadius": "6px", //输入框圆角
							"placeholder": "请输入搜索内容",
							"disabled": false //disable时点击输入框不置焦，可以跳到新页面搜索
						}
					}
				}
			}
		},
		{
			"path": "pages/main/test-searchbar/custom-searchbar",
			"style": {
				"navigationBarTitleText": "自定义搜索栏",
				"navigationStyle":"custom"
			}
		},
		{
			"path": "pages/main/test-arrow-function/test-arrow-function",
			"style": {
				"navigationBarTitleText": "箭头函数测试"
			}
		},
	
		{
			"path": "pages/main/test-click/test-click",
			"style": {
				"navigationBarTitleText": "cell点击测试"
			}
		}

	],
	// 配置全局样式
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#007AFF",
		"backgroundColor": "#FFFFFF"
	},
	//配置tabbar
	"tabBar": {
		"color": "#7a7e83",
		"selectedColor": "#1DB68F",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/main/main",
			"text": "首页",
			"iconPath": "static/img/tabbar/tabbar1_2.0@3x.png",
			"selectedIconPath": "static/img/tabbar/tabbar1_selected_2.0@3x.png"
		}, {
			"pagePath": "pages/apps/apps",
			"text": "应用",
			"iconPath": "static/img/tabbar/tabbar2_2.0@3x.png",
			"selectedIconPath": "static/img/tabbar/tabbar2_selected_2.0@3x.png"
		}, {
			"pagePath": "pages/news/news",
			"text": "新闻",
			"iconPath": "static/img/tabbar/tabbar3_2.0@3x.png",
			"selectedIconPath": "static/img/tabbar/tabbar3_selected_2.0@3x.png"
		}, {
			"pagePath": "pages/mine/mine",
			"text": "我的",
			"iconPath": "static/img/tabbar/tabbar4_2.0@3x.png",
			"selectedIconPath": "static/img/tabbar/tabbar4_selected_2.0@3x.png"
		}]
	}
}
